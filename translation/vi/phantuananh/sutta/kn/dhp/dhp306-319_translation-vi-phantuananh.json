  "dhp306:0.2": "Kinh Pháp Cú",
  "dhp306:0.3": "Phẩm Ðịa Ngục",
  "dhp306:0.4": "Sự tích nữ ngoại giáo Sundarī",
  "dhp306:1": "Nói láo đọa địa ngục",
