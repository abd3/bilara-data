{
  "dhp21:0.1": "Tiểu Bộ Kinh",
  "dhp21:0.2": "Kinh Pháp Cú",
  "dhp21:0.3": "Phẩm Không Phóng Dật",
  "dhp21:1": "Không phóng dật, đường sống,",
  "dhp21:2": "Phóng dật là đường chết.",
  "dhp21:3": "Không phóng dật, không chết,",
  "dhp21:4": "Phóng dật như chết rồi.",
  "dhp22:1": "Biết rõ sai biệt ấy,",
  "dhp22:2": "Người trí không phóng dật,",
  "dhp22:3": "Hoan hỷ, không phóng dật,",
  "dhp22:4": "An vui hạnh bậc Thánh.",
  "dhp23:1": "Người hằng tu thiền định,",
  "dhp23:2": "Thường kiên trì tinh tấn.",
  "dhp23:3": "Bậc trí hưởng Niết Bàn,",
  "dhp23:4": "Ðạt an tịnh vô thượng.",
  "dhp24:1": "Nỗ lực, giữ chánh niệm,",
  "dhp24:2": "Tịnh hạnh, hành thận trọng",
  "dhp24:3": "Tự điều, sống theo pháp,",
  "dhp24:4": "Ai sống không phóng dật,\nTiếng lành ngày tăng trưởng.",
  "dhp25:1": "Nỗ lực, không phóng dật,",
  "dhp25:2": "Tự điều, khéo chế ngự.",
  "dhp25:3": "Bậc trí xây hòn đảo,",
  "dhp25:4": "Nước lụt khó ngập tràn.",
  "dhp26:1": "Chúng ngu si, thiếu trí,",
  "dhp26:2": "Chuyên sống đời phóng dật.",
  "dhp26:3": "Người trí, không phóng dật,",
  "dhp26:4": "Như giữ tài sản quý.",
  "dhp27:1": "Chớ sống đời phóng dật,",
  "dhp27:2": "Chớ mê say dục lạc.",
  "dhp27:3": "Không phóng dật, thiền định,",
  "dhp27:4": "Ðạt được an lạc lớn.",
  "dhp28:1": "Người trí dẹp phóng dật,",
  "dhp28:2": "Với hạnh không phóng dật,",
  "dhp28:3": "Leo lầu cao trí tuệ,",
  "dhp28:4": "Không sầu, nhìn khổ sầu,",
  "dhp28:5": "Bậc trí đứng núi cao,",
  "dhp28:6": "Nhìn kẻ ngu, đất bằng.",
  "dhp29:1": "Tinh cần giữa phóng dật,",
  "dhp29:2": "Tỉnh thức giữa quần mê."
}