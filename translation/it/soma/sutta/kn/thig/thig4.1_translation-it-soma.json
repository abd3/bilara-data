{
  "thig4.1:0.1": "Canti delle Anziane Bhikkhunī",
  "thig4.1:0.2": "Capitolo dei Quattro",
  "thig4.1:0.3": "Canto dell’Anziana Bhaddā Kāpilānī",
  "thig4.1:1.1": "“Kassapa, figlio e erede del Buddha, ",
  "thig4.1:1.2": "ha una mente ben raccolta.",
  "thig4.1:1.3": "Lui conosce le sue vite passate",
  "thig4.1:1.4": "vede il paradiso e l’inferno.",
  "thig4.1:2.1": "Ha ottenuto la distruzione della nascita,",
  "thig4.1:2.2": "è un saggio compiuto"
}