{
  "thig1.17:0.1": "Canti delle Anziane Bhikkhunī",
  "thig1.17:0.2": "Capitolo degli Uno",
  "thig1.17:0.3": "Canto dell’Anziana Dhammā",
  "thig1.17:1.1": "“In cammino per la questua,",
  "thig1.17:1.2": "appoggiata a un bastone,",
  "thig1.17:1.3": "le mie estremità tremarono",
  "thig1.17:1.4": "e caddi in terra in un momento.",
  "thig1.17:1.5": "Vidi il pericolo nel corpo",
  "thig1.17:1.6": "in quel momento la mia mente fu liberata.”",
  "thig1.17:2.1": "L’Anziana Dhammā"
}