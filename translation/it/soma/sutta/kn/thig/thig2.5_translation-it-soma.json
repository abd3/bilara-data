{
  "thig2.5:0.1": "Canti delle Anziane Bhikkhunī",
  "thig2.5:0.2": "Capitolo dei Due",
  "thig2.5:0.3": "Canto dell’Anziana Cittā",
  "thig2.5:1.1": "“Nonostante fossi pelle e ossa,",
  "thig2.5:1.2": "malata e molto debole,",
  "thig2.5:1.3": "appoggiata a un bastone,",
  "thig2.5:1.4": "scalai la montagna.",
  "thig2.5:2.1": "Misi giù il mantello",
  "thig2.5:2.2": "e rovesciai la ciotola.",
  "thig2.5:2.3": "Sistemata su un sasso,",
  "thig2.5:2.4": "distrussi questa massa di oscurità.”",
  "thig2.5:3.1": "L’Anziana Cittā"
}