{
  "thig13.4:0.1": "Canti delle Anziane Bhikkhunī",
  "thig13.4:0.2": "Capitolo dei Venti",
  "thig13.4:0.3": "Canto dell’Anziana Sundarī",
  "thig13.4:1.1": "“In passato i tuoi figli morti",
  "thig13.4:1.2": "furono divorati dagli avvotoi.",
  "thig13.4:1.3": "Giorno e notte,",
  "thig13.4:1.4": "eri sopraffatta dalla disperazione.",
  "thig13.4:2.1": "Tutti e sette i tuoi bambini",
  "thig13.4:2.2": "sono stati divorati.",
  "thig13.4:2.3": "Bramina Vāseṭṭhi, come mai",
  "thig13.4:2.4": "non appari così disperata adesso?”",
  "thig13.4:3.1": "“Bramino, sia tu che io,",
  "thig13.4:3.2": "abbiamo avuto centinaia di figli",
  "thig13.4:3.3": "e centinaia di parenti divorati"
}