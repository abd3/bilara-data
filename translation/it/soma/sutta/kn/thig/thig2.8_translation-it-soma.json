{
  "thig2.8:0.1": "Canti delle Anziane Bhikkhunī",
  "thig2.8:0.2": "Capitolo dei Due",
  "thig2.8:0.3": "Canto dell’Anziana Abhayā",
  "thig2.8:1.1": "“Madre, ho contemplato il corpo",
  "thig2.8:1.2": "dalle piante dei piedi",
  "thig2.8:1.3": "fino alla sommità della testa,",
  "thig2.8:1.4": "vedendolo come impuro e fetido.",
  "thig2.8:2.1": "Adagiata in questo modo,",
  "thig2.8:2.2": "ho estirpato ogni passione",
  "thig2.8:2.3": "e estinto ogni fuoco:",
  "thig2.8:2.4": "sono fresca e pacata.”"
}