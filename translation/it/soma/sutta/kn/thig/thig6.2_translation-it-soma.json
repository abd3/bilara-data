{
  "thig6.2:0.1": "Canti delle Anziane Bhikkhunī",
  "thig6.2:0.2": "Capitolo dei Sei",
  "thig6.2:0.3": "Canto dell’Anziana Vāseṭṭhi",
  "thig6.2:1.1": "“Quando persi mio figlio fui presa dal dolore,",
  "thig6.2:1.2": "diventai pazza, persi la testa.",
  "thig6.2:1.3": "Nuda con i capelli arruffati/impazzati",
  "thig6.2:1.4": "vagai qua e là,",
  "thig6.2:2.1": "stando in cumuli di spazzatura,",
  "thig6.2:2.2": "sul lato di una strada o in un cimitero."
}